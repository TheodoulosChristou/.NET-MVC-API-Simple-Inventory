@model IEnumerable<SimpleInventory.Domain.Models.Category>
@{
    ViewData["Title"] = "Categories";
}

<h1 class="text-center mb-3">Categories</h1>

<a class="btn btn-primary mb-3" asp-controller="Category" asp-action="Create">New Category</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr><td colspan="2" class="text-center text-muted">No categories found.</td></tr>
        }
        else
        {
            foreach (var c in Model)
            {
                <tr>
                    <td>@c.Id</td>
                    <td>@c.Name</td>
                </tr>
            }
        }
    </tbody>
</table>
